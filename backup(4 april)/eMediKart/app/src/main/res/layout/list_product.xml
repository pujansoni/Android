<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/d_10"
    android:maxHeight="50dp">

    <ImageView
        android:layout_width="@dimen/d_60"
        android:layout_height="@dimen/d_60"
        android:id="@+id/img_product"
        android:layout_marginRight="@dimen/d_10"/>

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="addfadf"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/d_20"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/img_product"/>

    <TextView
        android:id="@+id/txt_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="fasdfadsf"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/d_15"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/img_product"
        android:layout_below="@+id/txt_product_name"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_product_description"/>

</RelativeLayout>

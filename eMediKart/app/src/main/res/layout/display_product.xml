<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AddToKart"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_marginBottom="@dimen/d_10"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_shopping_cart_black_24dp"
                    android:layout_margin="@dimen/d_20"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/d_10">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/img_view" />

            <LinearLayout
                android:id="@+id/name_and_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_view"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt1_product_name"
                    android:layout_marginTop="@dimen/d_20"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="@dimen/d_30"
                    android:textStyle="bold"
                    android:text="Product Name"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/txt1_product_description"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Product Description"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <View
                android:id="@+id/just_view"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#181616"
                android:layout_below="@id/name_and_des"/>

            <TextView
                android:id="@+id/manufacturerName"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/just_view"
                android:textSize="20dp"
                android:text="Manufacturer Name"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/txt1_manufacturer"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/manufacturerName"
                android:textSize="15dp"
                android:text="Manufacturer Name"
                android:textColor="@color/colorBlack"/>

            <View
                android:id="@+id/just_view3"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#181616"
                android:layout_below="@id/txt1_manufacturer"/>

            <TextView
                android:id="@+id/contenttext"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/just_view3"
                android:textSize="20dp"
                android:text="Content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/txt1_product_content"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contenttext"
                android:textSize="15dp"
                android:text="Content"
                android:textColor="@color/colorBlack"/>

            <View
                android:id="@+id/just_view1"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#181616"
                android:layout_below="@id/txt1_product_content"/>

            <TextView
                android:id="@+id/sideeffectstext"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/just_view1"
                android:textSize="20dp"
                android:text="Side Effects"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/sideeffects"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sideeffectstext"
                android:textSize="15dp"
                android:text="SideEffects"
                android:textColor="@color/colorBlack"/>

            <View
                android:id="@+id/just_view5"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#181616"
                android:layout_below="@id/sideeffects"/>

            <TextView
                android:id="@+id/pregsafety"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/just_view5"
                android:textSize="20dp"
                android:text="Pregnancy Safety"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_3"
                android:layout_below="@id/pregsafety"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt1_pregsafety"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Value"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/know_more"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt1_pregsafety"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:text="Click here to know more"
                    android:textColor="@color/colorBlue"
                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:id="@+id/just_view2"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#181616"
                android:layout_below="@id/linear_3"/>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/just_view2">

                <TextView
                    android:id="@+id/pricename"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/just_view2"
                    android:textSize="20dp"
                    android:text="Price"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="product price"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_below="@id/just_view2"
                    android:layout_toRightOf="@+id/pricename"
                    android:layout_weight="1"/>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/cart_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="add to cart"
        />
</LinearLayout>